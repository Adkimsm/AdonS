{
  "name": "easier",
  "version": "1.5.0",
  "description": "Easier Of AdonS.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "hx": "gulp",
    "build": "electron-builder --win",
    "pack": "electron-packager ./ AdonS --platform=win32 --overwrite --arch=x64 --out=./out --asar --app-version=3.1.2",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Adkinsm",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^13.6.1",
    "electron-builder": "^22.13.1",
    "eslint": "^8.2.0",
    "gulp": "^3.9.1",
    "gulp-javascript-obfuscator": "^1.1.6",
    "vinyl-sourcemaps-apply": "^0.2.1"
  },
  "build": {
    "productName": "AdonS",
    "appId": "com.uazira.adons",
    "copyright": "Uazira Inc.",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-store": "^8.0.1"
  }
}
