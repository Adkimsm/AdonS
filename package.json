{
  "name": "easier",
  "version": "1.5.0",
  "description": "Easier Of AdonS.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "hx": "gulp",
    "build": "electron-builder --win",
    "beautify": "prettier ./app/assets/js/*.js --write --config=./.prettierrc",
    "lint": "eslint ./app/assets/js/*.js"
  },
  "author": "Adkinsm",
  "license": "GPL",
  "devDependencies": {
    "electron": "^13.6.1",
    "electron-builder": "^22.13.1",
    "eslint": "^8.2.0",
    "gulp": "^4.0.2",
    "gulp-javascript-obfuscator": "^1.1.6",
    "vinyl-sourcemaps-apply": "^0.2.1"
  },
  "build": {
    "productName": "AdonS",
    "appId": "com.uazira.adons",
    "copyright": "Uazira Inc.",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "dom-terminal": "1.0.3",
    "electron-store": "8.0.1"
  }
}
